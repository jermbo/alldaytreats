---
// No props needed - JS manages state
---

<div class="checkout-modal" role="dialog" aria-labelledby="checkout-title" aria-modal="true" hidden>
  <div class="checkout-modal__backdrop"></div>
  <div class="checkout-modal__container">
    <!-- Step 1: Customer Information -->
    <div class="checkout-modal__step" data-step="info">
      <header class="checkout-modal__header">
        <h2 class="checkout-modal__title" id="checkout-title">Place Order</h2>
        <button
          type="button"
          class="checkout-modal__cancel"
          data-action="cancel"
        >
          Cancel
        </button>
      </header>

      <div class="checkout-modal__body">
        <section class="checkout-modal__section checkout-modal__section--summary">
          <h3 class="checkout-modal__section-title">Order Summary</h3>
          <div class="checkout-modal__summary-items"></div>
          <div class="checkout-modal__summary-totals">
            <div class="checkout-modal__summary-row">
              <span>Subtotal</span>
              <span class="checkout-modal__summary-subtotal">$0.00</span>
            </div>
            <div class="checkout-modal__summary-row">
              <span>Delivery</span>
              <span class="checkout-modal__summary-delivery">--</span>
            </div>
            <div class="checkout-modal__summary-row checkout-modal__summary-row--total">
              <span>Total</span>
              <span class="checkout-modal__summary-total">$0.00</span>
            </div>
          </div>
        </section>

        <section class="checkout-modal__section checkout-modal__section--form">
          <h3 class="checkout-modal__section-title">Customer Information</h3>
          <form class="checkout-modal__form" id="checkout-form" novalidate>
            <div class="checkout-modal__form-group">
              <label for="checkout-name" class="checkout-modal__label">
                Full Name <span class="checkout-modal__required" aria-label="required">*</span>
              </label>
              <input
                type="text"
                id="checkout-name"
                name="name"
                class="checkout-modal__input"
                autocomplete="name"
                required
                aria-required="true"
                aria-describedby="checkout-name-error"
              />
              <div class="checkout-modal__error" id="checkout-name-error" role="alert" aria-live="polite"></div>
            </div>

            <div class="checkout-modal__form-group">
              <label for="checkout-email" class="checkout-modal__label">
                Email Address <span class="checkout-modal__required" aria-label="required">*</span>
              </label>
              <input
                type="email"
                id="checkout-email"
                name="email"
                class="checkout-modal__input"
                autocomplete="email"
                required
                aria-required="true"
                aria-describedby="checkout-email-error"
              />
              <div class="checkout-modal__error" id="checkout-email-error" role="alert" aria-live="polite"></div>
            </div>

            <div class="checkout-modal__form-group">
              <label for="checkout-phone" class="checkout-modal__label">
                Phone Number <span class="checkout-modal__required" aria-label="required">*</span>
              </label>
              <input
                type="tel"
                id="checkout-phone"
                name="phone"
                class="checkout-modal__input"
                autocomplete="tel"
                minlength="14"
                maxlength="14"
                placeholder="(555) 555-5555"
                required
                aria-required="true"
                aria-describedby="checkout-phone-error"
              />
              <div class="checkout-modal__error" id="checkout-phone-error" role="alert" aria-live="polite"></div>
            </div>

            <div class="checkout-modal__form-group">
              <label for="checkout-zipcode" class="checkout-modal__label">
                Delivery Zip Code <span class="checkout-modal__required" aria-label="required">*</span>
              </label>
              <select
                id="checkout-zipcode"
                name="zipcode"
                class="checkout-modal__input checkout-modal__select"
                required
                aria-required="true"
                aria-describedby="checkout-zipcode-error"
              >
                <option value="">Select your zip code...</option>
              </select>
              <div class="checkout-modal__error" id="checkout-zipcode-error" role="alert" aria-live="polite"></div>
            </div>

            <div class="checkout-modal__form-group">
              <label for="checkout-address" class="checkout-modal__label">
                Delivery Address <span class="checkout-modal__required" aria-label="required">*</span>
              </label>
              <textarea
                id="checkout-address"
                name="address"
                class="checkout-modal__input checkout-modal__textarea"
                autocomplete="street-address"
                minlength="10"
                rows="3"
                placeholder="Street address, apt/unit, city"
                required
                aria-required="true"
                aria-describedby="checkout-address-error"
              ></textarea>
              <div class="checkout-modal__error" id="checkout-address-error" role="alert" aria-live="polite"></div>
            </div>

            <div class="checkout-modal__form-group">
              <label for="checkout-notes" class="checkout-modal__label">
                Order Notes (optional, max 500 characters)
              </label>
              <textarea
                id="checkout-notes"
                name="notes"
                class="checkout-modal__input checkout-modal__textarea"
                rows="3"
                placeholder="Any additional instructions..."
                maxlength="500"
              ></textarea>
              <div class="checkout-modal__char-count">
                <span class="checkout-modal__char-count-value">0</span> / 500
              </div>
            </div>

            <div class="checkout-modal__form-group checkout-modal__form-group--alt">
              <label for="checkout-website" class="checkout-modal__label">
                Website (leave blank)
              </label>
              <input
                type="text"
                name="website"
                id="checkout-website"
                class="checkout-modal__input"
                tabindex="-1"
                autocomplete="off"
                aria-hidden="true"
                data-lpignore="true"
                data-1p-ignore="true"
              />
            </div>

            <input type="hidden" name="form_loaded" id="checkout-form-ts" value="" />

            <div class="checkout-modal__form-actions">
              <button
                type="submit"
                class="checkout-modal__btn checkout-modal__btn--primary"
              >
                <span class="checkout-modal__btn-text">Continue</span>
                <span class="checkout-modal__btn-loader" aria-hidden="true"></span>
              </button>
            </div>
          </form>
        </section>
      </div>
    </div>

    <!-- Step 2: Email Instructions -->
    <div class="checkout-modal__step" data-step="instructions" hidden>
      <header class="checkout-modal__header">
        <h2 class="checkout-modal__title">Send Your Order</h2>
        <button
          type="button"
          class="checkout-modal__back"
          data-action="back"
        >
          Back
        </button>
      </header>

      <div class="checkout-modal__body">
        <div class="checkout-modal__instructions">
          <div class="checkout-modal__instructions-icon" aria-hidden="true">‚úâÔ∏è</div>
          <h3 class="checkout-modal__instructions-title">Almost Done!</h3>
          <p class="checkout-modal__instructions-text">
            To complete your order, you need to send an email to:
          </p>
          <div class="checkout-modal__email-address">
            alldaytreats@gmail.com
          </div>
          <p class="checkout-modal__instructions-text">
            Choose one of the options below to send your order details:
          </p>

          <div class="checkout-modal__actions">
            <button
              type="button"
              class="checkout-modal__btn checkout-modal__btn--secondary"
              data-action="copy"
            >
              <span class="checkout-modal__btn-icon">üìã</span>
              <span class="checkout-modal__btn-text">Copy Order Details</span>
              <span class="checkout-modal__btn-copied" hidden>Copied!</span>
            </button>

            <button
              type="button"
              class="checkout-modal__btn checkout-modal__btn--secondary"
              data-action="email"
            >
              <span class="checkout-modal__btn-icon">üìß</span>
              <span class="checkout-modal__btn-text">Open Email Client</span>
            </button>
          </div>

          <div class="checkout-modal__confirm-section">
            <div class="checkout-modal__warning">
              <strong>Important:</strong> Clicking the button below will clear your cart.
              If you have not actually sent the email, your order will NOT be placed.
            </div>
            <button
              type="button"
              class="checkout-modal__btn checkout-modal__btn--confirm"
              data-action="confirm"
            >
              Confirm Order Has Been Sent
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Step 3: Success -->
    <div class="checkout-modal__step" data-step="success" hidden>
      <div class="checkout-modal__body checkout-modal__body--centered">
        <div class="checkout-modal__success">
          <div class="checkout-modal__success-icon" aria-hidden="true">‚úì</div>
          <h3 class="checkout-modal__success-title">Thank You!</h3>
          <p class="checkout-modal__success-message">
            Your order has been submitted via email. We'll get back to you shortly to confirm the details.
          </p>
          <p class="checkout-modal__success-disclaimer">
            If you did not send the email, your order was not placed. Please try again.
          </p>
          <div class="checkout-modal__countdown">
            <span>Closing in </span>
            <span class="checkout-modal__countdown-value">5</span>
            <span> seconds...</span>
          </div>
          <button
            type="button"
            class="checkout-modal__btn checkout-modal__btn--close"
            data-action="close"
          >
            Close Now
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
