---
import type { CollectionEntry } from 'astro:content';

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { name, image, priceFrom, category, id } = product.data;
const description = product.body;
---

<article
  class="menu__item"
  data-category={category}
>
  <button
    type="button"
    class="menu__item-button"
    data-product-id={id}
    aria-label={`View details for ${name}`}
  >
    <img
      src={image}
      alt={name}
      class="menu__item-image"
      width="400"
      height="400"
      loading="lazy"
    />
    <div class="menu__item-content">
      <h3 class="menu__item-title">{name.toUpperCase()}</h3>
      <p class="menu__item-description">{description}</p>
      <p class="menu__item-price">From ${priceFrom}</p>
    </div>
  </button>
</article>
