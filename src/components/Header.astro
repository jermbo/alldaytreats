---
import { siteConfig } from '@/config/site';

interface Props {
  cartCount?: number;
}

const { cartCount = 0 } = Astro.props;
---

<header class="header">
  <div class="header__container">
    <nav class="header__nav" aria-label="Main navigation">
      <a href="#menu" class="header__nav-link">Menu</a>
      <a href="#about" class="header__nav-link">About</a>
      <div class="header__brand">
        <h1 class="header__title">{siteConfig.name}</h1>
      </div>
      <a href="#contact" class="header__nav-link">Contact</a>
      <a
        href={siteConfig.contact.instagram.url}
        target="_blank"
        rel="noopener noreferrer"
        class="header__nav-link"
        aria-label="Follow us on Instagram"
      >
        Instagram
      </a>
    </nav>
    
    <div class="header__actions">
      <button
        type="button"
        class="header__cart-btn"
        aria-label="View cart"
        id="cart-btn"
      >
        <span class="header__cart-icon" aria-hidden="true">ðŸ›’</span>
        <span class="header__cart-badge" id="cart-badge" aria-hidden="true"
          >{cartCount}</span
        >
      </button>
    </div>
  </div>
</header>
