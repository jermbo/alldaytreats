---
import { siteConfig } from '@/config/site';

interface Props {
  cartCount?: number;
}

const { cartCount = 0 } = Astro.props;
---

<header class="header">
  <div class="header__top-container">
    <nav class="header__contact" aria-label="Contact information">
      <a
        href={`mailto:${siteConfig.contact.email}`}
        class="header__contact-link"
        aria-label="Email us"
      >
        <span class="header__contact-icon" aria-hidden="true">âœ‰ï¸</span>
        <span>{siteConfig.contact.email}</span>
      </a>
      <a
        href={siteConfig.contact.instagram.url}
        target="_blank"
        rel="noopener noreferrer"
        class="header__contact-link"
        aria-label="Follow us on Instagram"
      >
        <span class="header__contact-icon" aria-hidden="true">ğŸ“·</span>
        <span>{siteConfig.contact.instagram.handle}</span>
      </a>
    </nav>
  </div>
  <div class="header__container">
    <div class="header__brand">
      <img
        src="/images/logo.jpeg"
        alt="All Day Treats Logo"
        class="header__logo"
      />
      <div class="header__brand-text">
        <h1 class="header__title">{siteConfig.name}</h1>
        <p class="header__location">{siteConfig.location}</p>
      </div>
    </div>
    <div class="header__actions">
      <button
        type="button"
        class="header__cart-btn"
        aria-label="View cart"
        id="cart-btn"
      >
        <span class="header__cart-icon" aria-hidden="true">ğŸ›’</span>
        <span class="header__cart-badge" id="cart-badge" aria-hidden="true"
          >{cartCount}</span
        >
      </button>
    </div>
  </div>
</header>
