---
import { siteConfig } from '@/config/site';
---

<footer class="footer">
  <div class="footer__container">
    <div class="footer__column">
      <h3 class="footer__title">{siteConfig.name}</h3>
      <p class="footer__description">
        {siteConfig.description}
      </p>
    </div>
    <div class="footer__column">
      <h3 class="footer__title">Contact Us</h3>
      <nav class="footer__contact" aria-label="Contact information">
        <a
          href={`mailto:${siteConfig.contact.email}`}
          class="footer__contact-link"
          aria-label="Email us"
        >
          <span class="footer__contact-icon" aria-hidden="true">‚úâÔ∏è</span>
          <span>{siteConfig.contact.email}</span>
        </a>
        <a
          href={siteConfig.contact.instagram.url}
          target="_blank"
          rel="noopener noreferrer"
          class="footer__contact-link"
          aria-label="Follow us on Instagram"
        >
          <span class="footer__contact-icon" aria-hidden="true">üì∑</span>
          <span>{siteConfig.contact.instagram.handle}</span>
        </a>
      </nav>
    </div>
    <div class="footer__column">
      <h3 class="footer__title">Order Info</h3>
      <ul class="footer__list">
        <li class="footer__list-item">
          Half of the cost is due upfront (non-refundable)
        </li>
        <li class="footer__list-item">Deposit required within 3 hours</li>
        <li class="footer__list-item">24 hours to pick up order</li>
        <li class="footer__list-item">Place big orders a week ahead</li>
        <li class="footer__list-item">
          Payment: CashApp, Venmo, Tap, Apple Pay
        </li>
      </ul>
    </div>
  </div>
  <div class="footer__copyright">
    <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</p>
  </div>
</footer>
